{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./src",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
